[Unit]
Description=Heista Go Backend
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/.openclaw/workspace/projects/heista-hq/backend
EnvironmentFile=/root/.openclaw/workspace/projects/heista-hq/backend/.env
ExecStart=/usr/bin/env bash /root/.openclaw/workspace/projects/heista-hq/backend/run.sh
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
